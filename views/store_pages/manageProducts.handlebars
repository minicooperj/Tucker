                    <td>{{this.id}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.inStock}}</td>
                    <td>{{this.discounted}}</td>
                    <td>{{this.discountedPrice}}</td>
                    <td>{{this.ProductDescription.description}}</td>
                    <td><button type="button" class="btn btn-secondary btn-sm">View / Edit</button></td>
                </tr>
            {{/each}}
          </tbody>
      </table>
