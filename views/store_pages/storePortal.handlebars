<!-- Container for Store Options  -->

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3">Manage your Store here</h1>
        <p class="lead">Use this Portal to manage your store. Add items to your store, view and process your orders, and set up and update your special offers!</p>
    </div>
    <div class="container">
        <button class="btn btn-primary" data-toggle="modal" data-target="#storeInfoModal">Manage Info</button>
        <a href="/store/product"><button class="btn btn-primary">Manage Products</button></a>
        <a href="/store/orders"><button class="btn btn-primary">Manage Orders</button></a>
        <button class="btn btn-primary" data-toggle="modal" data-target="#storeSpecialsModal">Manage Specials</button>
    </div>
</div>

<!-- Modal for Info -->
<div class="modal fade bd-example-modal-lg" id="storeInfoModal" tabindex="-1" role="dialog" aria-labelledby="storeInfoModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="container">
                <hr>
                <h2>Tucker</h3>
                <hr>
                <div class="row">
                        <div class="col-md-6">
                            <h3 class="text-center">Info:</h3>
                            {{#each store}}
                                <h5>Store Name:</h5>
                                <p>{{this.storeName}}</p>
                                <h5>Website:</h5>
                                <p>{{this.website}}</p>
                                <h5>Email:</h5>
                                <p>{{this.email}}</p>
                                <h5>Prone:</h5>
                                <p>{{this.phone}}</p>
                                <h5>Allow Pickup:</h5>
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="{{pickupOption.type}}" disabled>
                                    Allow Customers to place orders for pickup
                                </label> 
                                <h5>Allow Delivery:</h5>
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="{{deliveryOption.type}}" disabled>
                                    Allow Customers to place orders for delivery
                                </label> 
                            {{/each}}
                        </div>

                        <div class="col-md-6">
                            <h3 class="text-center">Address:</h3>
                            {{#each store}}
                                <h5>Address:</h5>
                                <p>{{this.Address.street}}</p>
                                <h5>City:</h5>
                                <p>{{this.Address.city}}</p>
                                <h5>State:</h5>
                                <p>{{this.Address.state}}</p>
                                <h5>Zip Code:</h5>
                                <p>{{this.Address.zip_code}}</p>
                            {{/each}}
                        </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                    <hr>
                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editStoreInfoModal" data-dismiss="modal">Update Info</button>
                    <hr>
                    </div>
                    <div class="col-md-6">
                    <hr>
                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editStoreAddressModal" data-dismiss="modal">Update Address</button>
                    <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <button class="btn btn-danger btn-sm" data-dismiss="modal">Cancel</button>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
        <!-- Close Modal content  -->
    </div>
</div>

<!-- Modal for Edit Info -->
<div class="modal fade bd-example-modal-sm" id="editStoreInfoModal" tabindex="-1" role="dialog" aria-labelledby="storeInfoModal" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="container text-center">
                <hr>
                <h3>Tucker</h3>
                <hr>
                 <div class="row">
                        <div class="col-md-12">
                            <h3 class="text-center">Store Info:</h3>
                            <form method="POST" action="/store/info?_method=PUT">
                                {{#each store}}
                                    <h5>Store Name:</h5>
                                <input class="form-control" name="storeName" type="text" value="{{this.storeName}}" id="storeNameInput">
                                    <h5>Website:</h5>
                                <input class="form-control" name="website"  type="text" value="{{this.website}}" id="storeNameInput">
                                    <h5>Email:</h5>
                                <input class="form-control" name="email"  type="text" value="{{this.email}}" id="storeNameInput">
                                    <h5>Prone:</h5>
                                <input class="form-control" name="phone"  type="text" value="{{this.phone}}" id="storeNameInput">
                                    <h5>Allow Pickup:</h5>
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" value="{{pickupOption.type}}" disabled>
                                        Allow Customers to place orders for pickup
                                    </label> 
                                    <h5>Allow Delivery:</h5>
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" value="{{deliveryOption.type}}" disabled>
                                        Allow Customers to place orders for delivery
                                    </label> 
                                {{/each}}
                                <hr>
                                <button class="btn btn-primary btn-sm"type="submit" >Save New Details</button>
                                <button class="btn btn-danger btn-sm" data-dismiss="modal">Cancel</button>
                            </form>
                        </div>
                </div>
                <hr>
            </div>
        </div>
        <!-- Close Modal content  -->
    </div>
</div>

<!-- Modal for Edit Address -->
<div class="modal fade bd-example-modal-md" id="editStoreAddressModal" tabindex="-1" role="dialog" aria-labelledby="storeInfoModal" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="container text-center">
                <hr>
                <h3>Tucker</h3>
                <hr>
                 <div class="row">
                        <div class="col-md-12">
                            <h3 class="text-center">Store Address:</h3>
                            <form method="POST" action="/store/address/?_method=PUT">
                                {{#each store}}
                                    <h5>Address:</h5>
                                    <input class="form-control" name="street"  type="text" value="{{this.Address.street}}">
                                    <h5>City:</h5>
                                    <input class="form-control" name="city"  type="text" value="{{this.Address.city}}" >
                                    <h5>State:</h5>
                                    <input class="form-control" name="state"  type="text" value="{{this.Address.state}}">
                                    <h5>Zip Code:</h5>
                                    <input class="form-control" name="zip_code"  type="text" value="{{this.Address.zip_code}}" >
                                {{/each}}
                                <hr>
                                <button class="btn btn-primary btn-sm" type="submit">Save New Details</button>
                                <button class="btn btn-danger btn-sm" data-dismiss="modal">Cancel</button>
                            </form>
                        </div>
                </div>
                <hr>
            </div>
        </div>
        <!-- Close Modal content  -->
    </div>
</div>




